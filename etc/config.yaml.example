app:
  name: "go-scaffold"     # 应用名称
  env: "local"            # 当前环境（local、test 或 prod）
  timeout: 5              # 停止应用的等待时间

http:
  network: "tcp"
  addr: "0.0.0.0:9527"    # http 服务监听地址
  timeout: 5
  externalAddr: ""        # 外部访问地址，如反向代理

grpc:
  network: "tcp"
  addr: "0.0.0.0:9528"  # grpc 服务监听地址
  timeout: 5

# 服务 grpc 地址
services:
  self: "0.0.0.0:9528"
  # self: "discovery:///go-scaffold" # 服务发现地址


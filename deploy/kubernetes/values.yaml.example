secret:
  imagePull:
    name: "go-scaffold-image-pull-secret"
    data:
      .dockerconfigjson: <docker login config>
  tls:
    name: "www-go-scaffold-example-tls"
    data:
      www.go-scaffold.example.crt: <base64 编码后的证书文件内容>
      www.go-scaffold.example.key: <base64 编码后的密钥文件内容>

service:
  type: ClusterIP
  ports:
    - name: http
      port: 9527
      targetPort: 9527
      protocol: TCP
      nodePort:
    - name: rpc
      port: 9528
      targetPort: 9528
      protocol: TCP
      nodePort:

ingress:
  enabled: false
  className: ""
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: 50m
    nginx.ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: nginx
    # kubernetes.io/tls-acme: "true"
  tls:
    enable: false
    hosts:
      - hosts:
          - www.go-scaffold.example
        secretName: www-go-scaffold-example-tls
  hosts:
    - host: www.go-scaffold.example
      paths:
        - path: /
          pathType: Prefix

serviceAccount:
  create: true
  name: ""
  annotations: {}

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 10
  targetCPUUtilizationPercentage: 80
  targetMemoryUtilizationPercentage: 80
